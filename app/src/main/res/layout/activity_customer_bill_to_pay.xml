<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CustomerBillToPay"
    tools:layout_editor_absoluteY="73dp">

    <TextView
        android:id="@+id/textView_title_customer_bill_to_pay"
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/listview_bill_to_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cancel_bill_to_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="7dp"
        android:onClick="cancelBillToPay"
        android:text="@string/button_cancel_bill_to_pay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_cancel_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_bill_to_pay" />

    <Button
        android:id="@+id/button_cancel_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="7dp"
        android:onClick="cancelAllBillToPay"
        android:text="Cancelar todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_cancel_bill_to_pay" />

    <ListView
        android:id="@+id/listview_bill_to_pay"
        android:layout_width="297dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/button_cancel_bill_to_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title_customer_bill_to_pay" />
</android.support.constraint.ConstraintLayout>